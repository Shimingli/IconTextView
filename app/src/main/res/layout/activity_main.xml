<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.weiteng.demo.MainActivity">

    <com.weiteng.widget.IconTextView
        android:id="@+id/icon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        app:itv_gap="4dp"
        app:itv_direction="TOP"
        app:itv_icon="@drawable/star_on"
        app:itv_iconHeight="20dp"
        app:itv_iconWidth="20dp"
        app:itv_textSize="13sp"
        app:itv_text="新闻" />

    <com.weiteng.widget.IconTextView
        android:id="@+id/icon_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:padding="4dp"
        android:layout_toRightOf="@id/icon_tv"
        app:itv_gap="4dp"
        app:itv_direction="BOTTOM"
        app:itv_icon="@drawable/star_on"
        app:itv_iconHeight="20dp"
        app:itv_iconWidth="20dp"
        app:itv_textSize="13sp"
        app:itv_text="体育" />

    <com.weiteng.widget.IconTextView
        android:id="@+id/icon_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:layout_below="@id/icon_tv"
        app:itv_gap="4dp"
        app:itv_direction="LEFT"
        app:itv_icon="@drawable/star_on"
        app:itv_iconHeight="20dp"
        app:itv_iconWidth="20dp"
        app:itv_textSize="13sp"
        app:itv_text="音乐" />

    <com.weiteng.widget.IconTextView
        android:id="@+id/icon_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/icon_tv"
        android:padding="4dp"
        android:layout_toRightOf="@id/icon_tv3"
        app:itv_gap="4dp"
        app:itv_direction="RIGHT"
        app:itv_icon="@drawable/star_on"
        app:itv_iconHeight="20dp"
        app:itv_iconWidth="20dp"
        app:itv_textSize="13sp"
        app:itv_text="视频" />

</RelativeLayout>
